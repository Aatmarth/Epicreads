<%- include("../partials/user/header.ejs") %>

<div class="container mt-5">
    <h1 class="text-center text-uppercase">User Profile</h1>

    <!-- Navigation to Other Sections -->
    <div class="text-center mb-5">
        <div class="d-flex justify-content-center">
            <div class="p-3">
                <a href="/orders" class="btn btn-outline-dark">View Orders</a>
            </div>
            <div class="p-3">
                <a href="/wallet" class="btn btn-outline-dark">View Wallet</a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- User Details Section -->
        <div class="col-md-6">
            <div class="card d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">User Details</h5>
                    <div class="mb-auto">
                        <p class="card-text"><strong>Name:</strong> <%= user.name %></p>
                        <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
                        <p class="card-text"><strong>Phone:</strong> <%= user.mobile %></p>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <a href="/changePassword" class="btn btn-outline-danger align-self-end">Change Password</a>
                        <a href="/editProfile" class="btn btn-outline-success align-self-end">Edit Profile</a>
                    </div>
                </div>
            </div>
            
            <!-- Primary Address Section -->
            <div class="mt-4">
                <div class="card mb-5">
                    <div class="card-body">
                        <h2 class="mb-3">Primary Address</h2>
                        <% if (addresses.length > 0) {
                            const primaryAddress = addresses[0];
                            %>
                                    <p class="card-text"><strong>Address Type:</strong>
                                        <%= primaryAddress.addressType %>
                                    </p>
                                    <p class="card-text"><strong>Name:</strong>
                                        <%= primaryAddress.name %>
                                    </p>
                                    <p class="card-text"><strong>City:</strong>
                                        <%= primaryAddress.city %>
                                    </p>
                                    <p class="card-text"><strong>State:</strong>
                                        <%= primaryAddress.state %>
                                    </p>
                                    <p class="card-text"><strong>Pincode:</strong>
                                        <%= primaryAddress.pincode %>
                                    </p>
                                    <p class="card-text"><strong>Phone:</strong>
                                        <%= primaryAddress.phone %>
                                    </p>
                                    <% if (primaryAddress.email) { %>
                                        <p class="card-text"><strong>Email:</strong>
                                            <%= primaryAddress.email %>
                                        </p>
                                    <% } %>
                                    <a href="/editAddress?id=<%= primaryAddress._id %>" class="btn btn-primary">Edit</a>
                                    <a href="#" class="btn btn-danger delete-address" data-id="<%= primaryAddress._id %>">Delete</a>

                                </div>
                            </div>
                        <% } else { %>
                            <p>No addresses available.</p>
                        <% } %>
            </div>
        </div>

        <!-- Other Addresses Section -->
        <div class="col-md-6">
                    <% if (addresses.length > 1) {
                        addresses.slice(1).forEach((address, index) => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Address <%= index + 2 %></h5>
                                <p class="card-text"><strong>Address Type:</strong>
                                    <%= address.addressType %>
                                </p>
                                <p class="card-text"><strong>Name:</strong>
                                    <%= address.name %>
                                </p>
                                <p class="card-text"><strong>City:</strong>
                                    <%= address.city %>
                                </p>
                                <p class="card-text"><strong>State:</strong>
                                    <%= address.state %>
                                </p>
                                <p class="card-text"><strong>Pincode:</strong>
                                    <%= address.pincode %>
                                </p>
                                <p class="card-text"><strong>Phone:</strong>
                                    <%= address.phone %>
                                </p>
                                <% if (address.email) { %>
                                    <p class="card-text"><strong>Email:</strong>
                                        <%= address.email %>
                                    </p>
                                <% } %>
                                <a href="/editAddress?id=<%= address._id %>" class="btn btn-primary">Edit</a>
                                <a href="/deleteAddress?id=<%= address._id %>" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    <% }) } else { %>
                        <p>No additional addresses available.</p>
                    <% } %>
                    <a href="/addAddress" class="btn btn-success ms-3">Add New Address</a>
        </div>
    </div>
</div>

