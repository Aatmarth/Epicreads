<%- include("../partials/admin/header.ejs") %>

<div class="container mt-5">
    <h2 class="text-center mb-4">Product Offer Management</h2>

    <div class="d-flex justify-content-between mb-3">
        <div class="input-group input-group-sm" style="width: 550px;">
            <input type="text" class="form-control" id="searchProductOffer" placeholder="Search offers by name" value="<%= searchQuery %>">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" onclick="searchProductOffers()">Search</button>
            </div>
            <div class="ms-3">
                <a href="/admin/addProductOffer" class="btn btn-primary">Add Product Offer</a>
            </div>
        </div>
        <div>
            <a href="/admin/categoryOffers" class="btn btn-outline-success">Go to Category Offer</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Offer Name</th>
                <th>Product Applied</th>
                <th>Discount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="productOfferTable">
            <% productOffers.forEach(offer => { %>
                <tr>
                    <td><%= offer.offerName %></td>
                    <td><%= offer.productId.productName %></td>
                    <td><%= offer.offerPercentage %>%</td>
                    <td><%= offer.isActive ? 'Active' : 'Inactive' %></td>
                    <td class="d-flex action-buttons">
                        <% if (offer.isActive) { %>
                            <button class="btn btn-success btn-sm me-2">
                                <a href="/admin/toggleProductOffer?id=<%= offer._id %>" style="text-decoration: none; color: white;">Deactivate</a>
                            </button>
                        <% } else { %>
                            <button class="btn btn-danger btn-sm me-3">
                                <a href="/admin/toggleProductOffer?id=<%= offer._id %>" style="text-decoration: none; color: white;">Activate</a>
                            </button>
                        <% } %>
                        <button class="btn btn-danger btn-sm" onclick="deleteProductOffer('<%= offer._id %>')">Delete</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin/product-offers?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">Previous</a>
                </li>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="/admin/product-offers?page=<%= i %>&search=<%= searchQuery %>"><%= i %></a>
                </li>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin/product-offers?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next</a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<script>
    // Function to search product offers
    function searchProductOffers() {
        const searchValue = document.getElementById("searchProductOffer").value;
        window.location.href = `/admin/productOffers?page=1&search=${encodeURIComponent(searchValue)}`;
    }

    // Function to delete a product offer with confirmation
    function deleteProductOffer(offerId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/deleteProductOffer?id=${offerId}`;
            }
        });
    }

    document.getElementById("searchProductOffer").addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
            event.preventDefault();
            searchProductOffers();
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<%- include("../partials/admin/footer.ejs") %>
